<%= form_for(@user) do |f| %>

  <%= f.label(:username) %>
  <%= f.text_field(:username, value: "#{@user.username}") %><br /><br />

  <%= f.label(:email) %>
  <%= f.text_field(:email, placeholder: "#{@user.email}") %><br /><br />

  <%= f.label(:password, value: "New Password") %>
  <%= f.password_field(:password) %><br /><br />

<%= f.submit %>

<% end %>